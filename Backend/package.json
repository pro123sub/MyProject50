{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for LoanInNeed digital lending platform, providing secure and scalable services including credit score evaluation, EMI calculations, content management, and visitor analytics using Node.js, Express, and PostgreSQL.",
  "main": "server.js",
  "scripts": {
    "test": "jest --runInBand --reporters=default --reporters=jest-html-reporters",
    "start": "nodemon server.js"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./reports",
          "filename": "test-report.html",
          "expand": true,
          "pageTitle": "LoanInNeed Backend API Test Report"
        }
      ]
    ]
  },
  "author": "Priyanshu Routh",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "@supabase/supabase-js": "^2.76.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "twilio": "^4.23.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "faker": "^5.5.3",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "prisma": "^6.16.1",
    "supertest": "^7.1.4"
  }
}
